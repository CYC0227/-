<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/posting_table"
                    android:layout_width="match_parent"
                    android:layout_height="117dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/posting_rec1" />

                <ImageView
                    android:id="@+id/img_prof"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_margin="30dp"
                    android:background="@drawable/meat" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="제육볶음"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape2"
                    android:paddingLeft="20dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:scaleType="fitXY"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day category"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/text_kind_day"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape2"
                    android:paddingLeft="20dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:scaleType="fitXY"
                    android:text="Camping"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country category"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/text_kind_country"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape2"
                    android:paddingLeft="20dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:scaleType="fitXY"
                    android:text="X"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="24dp"/>
                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:text="후후--- 오늘은 여러분들을 위해! 백종원 제육볶음 레시피^^를 가져왔어요~^^"
                    android:padding="20dp"
                    android:background="@drawable/shape2"/>
                <TextView
                    android:id="@+id/text_description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:text="1. 재료는 먹기 좋은 크기도 썰어서 준비해주세요^^"
                    android:padding="20dp"
                    android:background="@drawable/shape2"/>
                <TextView
                    android:id="@+id/text_description3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:text="2. 고추장 2스푼, 간장 2스푼. 고춧가루 2스푼, 다진마늘 1스푼, 굴소스 1스푼, 올리고당 1스푼 넣어서
양념장을 이렇게 만들어주세요"
                    android:padding="20dp"
                    android:background="@drawable/shape2"/>
                <TextView
                    android:id="@+id/text_description4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:text="3. 고기가 익어갈때 설탕을 넣고 더 구워주는게 백종원 제육볶음의 포인트^^
동물성 단백질로 구성된 식재료는 설탕부터 사용해야 단맛을 제대로 낼수 있다고해요
소금부터 넣거나 다른 것부터 간을 해버리면 설탕입자는 들어가지 않아서 고기에 단맛이 안베니까 꼭 설탕부터^^
2스푼 넣었습니다!!!
기호에 따라 가감하시길"
                    android:padding="20dp"
                    android:background="@drawable/shape2"/>
                <TextView
                    android:id="@+id/text_description5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:text="4. 손질해둔 야채와 양념장을 넣고 볶아주세요~^^"
                    android:padding="20dp"
                    android:background="@drawable/shape2"/>
                <TextView
                    android:id="@+id/text_description6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:text="5. 모든 재료가 다 익으면 제육볶음 끝^^"
                    android:padding="20dp"
                    android:background="@drawable/shape2"/>

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/decription_line" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="24dp"/>
                <Spinner
                    android:id="@+id/text_information"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:entries="@array/post_people"
                    android:spinnerMode="dialog" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_ingredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredients"
                        android:textColor="@color/black"
                        android:layout_margin="15dp"
                        android:textSize="24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit_ingredients"
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape2"
                            android:paddingLeft="10dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="돼지고기"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/edit_ingredients_num"
                            android:layout_width="88dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shape2"
                            android:gravity="center"
                            android:paddingLeft="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="600"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit_ingredients2"
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape2"
                            android:hint="양파"
                            android:paddingLeft="10dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/edit_ingredients_num2"
                            android:layout_width="88dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shape2"
                            android:gravity="center"
                            android:paddingLeft="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="1"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="63dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit_ingredients3"
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape2"
                            android:paddingLeft="10dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="청양고추"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/edit_ingredients_num3"
                            android:layout_width="88dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shape2"
                            android:gravity="center"
                            android:paddingLeft="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="2"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit_ingredients4"
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape2"
                            android:paddingLeft="10dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="대파"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/edit_ingredients_num4"
                            android:layout_width="88dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shape2"
                            android:gravity="center"
                            android:paddingLeft="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="1"
                            android:textSize="22dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/edit_ingredients5"
                            android:layout_width="150dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/shape2"
                            android:paddingLeft="10dp"
                            android:paddingTop="13dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="고추장"
                            android:textSize="22dp" />

                        <TextView
                            android:id="@+id/edit_ingredients_num5"
                            android:layout_width="88dp"
                            android:layout_height="55dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/shape2"
                            android:gravity="center"
                            android:paddingLeft="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:scaleType="fitXY"
                            android:text="2"
                            android:textSize="22dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>