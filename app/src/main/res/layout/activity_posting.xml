<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitXY">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/posting_table"
                    android:layout_width="match_parent"
                    android:layout_height="117dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/posting_rec1" />
                <ImageView
                    android:id="@+id/plus_photo1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_photo"
                    android:layout_margin="16dp" />


                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="title"
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/shape2"/>

                <TextView
                    android:id="@+id/text_kind_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Day category"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="24dp"/>

                <Spinner
                    android:id="@+id/spinner_day"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:entries="@array/kind_day"
                    android:spinnerMode="dialog" />
                <TextView
                    android:id="@+id/text_kind_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country category"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="24dp"/>

                <Spinner
                    android:id="@+id/spinner_country"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:entries="@array/kind_country"
                    android:spinnerMode="dialog" />

                <TextView
                    android:id="@+id/text_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="24dp"/>
                <EditText
                    android:id="@+id/edit_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="Write a description of the dish to be introduced. For example, write down the characteristics or strengths of this dish."
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:padding="20dp"
                    android:background="@drawable/shape2"/>

                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/decription_line" />

                <TextView
                    android:id="@+id/text_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Information"
                    android:textColor="@color/black"
                    android:layout_margin="15dp"
                    android:textSize="24dp"/>
                <EditText
                    android:id="@+id/edit_information"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:hint="People"
                    android:scaleType="fitXY"
                    android:textSize="22dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/shape2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/text_ingredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredients"
                        android:textColor="@color/black"
                        android:layout_margin="15dp"
                        android:textSize="24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <EditText
                        android:id="@+id/edit_ingredients"
                        android:layout_width="186dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape2"
                        android:hint="Ingredient"
                        android:paddingLeft="10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:scaleType="fitXY"
                        android:textSize="22dp" />

                    <EditText
                        android:id="@+id/edit_ingredients_num"
                        android:layout_width="88dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:hint="num"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:textSize="22dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="7dp"
                        android:background="@drawable/shape2"/>

                    <!--                    <ImageButton-->
                    <!--                        android:id="@+id/plus"-->
                    <!--                        android:layout_width="14dp"-->
                    <!--                        android:layout_height="match_parent"-->
                    <!--                        android:layout_weight="1"-->
                    <!--                        android:background="@color/x"-->
                    <!--                        app:srcCompat="@drawable/plus_button" />-->

                </LinearLayout>

                <!--                -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edit_ingredients2"
                        android:layout_width="186dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape2"
                        android:hint="Ingredient"
                        android:paddingLeft="10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:scaleType="fitXY"
                        android:textSize="22dp" />

                    <EditText
                        android:id="@+id/edit_ingredients_num2"
                        android:layout_width="88dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:hint="num"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:textSize="22dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="7dp"
                        android:background="@drawable/shape2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edit_ingredients3"
                        android:layout_width="186dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape2"
                        android:hint="Ingredient"
                        android:paddingLeft="10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:scaleType="fitXY"
                        android:textSize="22dp" />

                    <EditText
                        android:id="@+id/edit_ingredients_num3"
                        android:layout_width="88dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:hint="num"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:textSize="22dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="7dp"
                        android:background="@drawable/shape2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edit_ingredients4"
                        android:layout_width="186dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape2"
                        android:hint="Ingredient"
                        android:paddingLeft="10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:scaleType="fitXY"
                        android:textSize="22dp" />

                    <EditText
                        android:id="@+id/edit_ingredients_num4"
                        android:layout_width="88dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:hint="num"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:textSize="22dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="7dp"
                        android:background="@drawable/shape2"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/edit_ingredients5"
                        android:layout_width="186dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape2"
                        android:hint="Ingredient"
                        android:paddingLeft="10dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:scaleType="fitXY"
                        android:textSize="22dp" />

                    <EditText
                        android:id="@+id/edit_ingredients_num5"
                        android:layout_width="88dp"
                        android:layout_height="55dp"
                        android:layout_marginLeft="5dp"
                        android:hint="num"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:textSize="22dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:paddingLeft="7dp"
                        android:background="@drawable/shape2"/>

                    <ImageButton
                        android:id="@+id/plus"
                        android:layout_width="14dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/x"
                        app:srcCompat="@drawable/plus_button" />
                </LinearLayout>

                <!--                <ListView-->
                <!--                    android:id="@+id/listview"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="274dp"-->
                <!--                    android:scrollbars="none" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                    <ImageButton
                        android:id="@+id/submit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_save"
                        android:layout_alignParentRight="true"
                        android:layout_margin="15dp"
                        android:text="Submit">
                    </ImageButton>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>